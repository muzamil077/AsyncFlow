// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  projects      Project[]
  assignedTasks Task[]    @relation("AssignedTasks")
  createdTasks  Task[]    @relation("CreatedTasks")
  meetings      Meeting[]
  discussions   Discussion[]
  discussionPosts DiscussionPost[]
  projectMemberships ProjectMember[]
  sentInvitations ProjectInvitation[] @relation("InvitationSender")
  skills        UserSkill[]
}

model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     String
  owner       User     @relation(fields: [ownerId], references: [id])
  tasks       Task[]
  meetings    Meeting[]
  discussions Discussion[]
  members     ProjectMember[]
  invitations ProjectInvitation[]
  wikiPages   WikiPage[]
}

model ProjectMember {
  id        String     @id @default(uuid())
  projectId String
  userId    String
  role      MemberRole @default(MEMBER)
  joinedAt  DateTime   @default(now())
  
  project   Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([projectId, userId])
}

model ProjectInvitation {
  id        String           @id @default(uuid())
  projectId String
  email     String
  role      MemberRole       @default(MEMBER)
  token     String           @unique
  invitedBy String
  status    InvitationStatus @default(PENDING)
  expiresAt DateTime
  createdAt DateTime         @default(now())
  
  project   Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  inviter   User             @relation("InvitationSender", fields: [invitedBy], references: [id])
}

model UserSkill {
  id     String     @id @default(uuid())
  userId String
  skill  String
  level  SkillLevel
  
  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, skill])
}

model Task {
  id          String       @id @default(uuid())
  title       String
  description String?
  status      TaskStatus   @default(TODO)
  priority    TaskPriority @default(MEDIUM)
  dueDate     DateTime?
  projectId   String
  assigneeId  String?
  createdById String
  tags        String[]
  aiGenerated Boolean      @default(false)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  
  project     Project      @relation(fields: [projectId], references: [id], onDelete: Cascade)
  assignee    User?        @relation("AssignedTasks", fields: [assigneeId], references: [id])
  createdBy   User         @relation("CreatedTasks", fields: [createdById], references: [id])
}

model Meeting {
  id               String   @id @default(uuid())
  title            String?
  date             DateTime @default(now())
  provider         String?   // e.g., 'zoom', 'google', 'teams'
  externalId       String?   // ID from the external provider
  transcript       String
  summary          String
  actionItems      Json?
  decisions        Json?
  discussionPoints Json?
  projectId        String?
  createdById      String
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  project   Project? @relation(fields: [projectId], references: [id])
  createdBy User     @relation(fields: [createdById], references: [id])
}

model WikiPage {
  id          String   @id @default(uuid())
  title       String
  content     String   // Markdown content
  generatedAt DateTime @default(now())
  projectId   String

  project Project @relation(fields: [projectId], references: [id])
}


model Discussion {
  id          String   @id @default(uuid())
  title       String
  content     String
  projectId   String
  createdById String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  project   Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  createdBy User             @relation(fields: [createdById], references: [id])
  posts     DiscussionPost[]
}

model DiscussionPost {
  id           String   @id @default(uuid())
  content      String
  discussionId String
  createdById  String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  discussion Discussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)
  createdBy  User       @relation(fields: [createdById], references: [id])
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  IN_REVIEW
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum MemberRole {
  OWNER
  ADMIN
  MEMBER
  VIEWER
}

enum InvitationStatus {
  PENDING
  ACCEPTED
  EXPIRED
  REVOKED
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}
